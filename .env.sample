# Twitch API (for fetching clips)
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Twitch Chat Bot (tmi.js)
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=your_oauth_token
TWITCH_CHANNEL=channel1,channel2,channel3

# API Configuration
API_BASE_URL=https://your-app.up.railway.app

# Admin Key - Used for:
# - Admin panel login (admin.php)
# - Bot commands that modify data (!pclip, !cskip, !chud, etc.)
# - API endpoints that require authentication
ADMIN_KEY=your_secure_admin_key

# PostgreSQL Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:pass@host:port/database
